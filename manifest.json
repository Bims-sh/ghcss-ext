{
  "name": "ghcss",
  "description": "Custom Github Profile CSS",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/512.png"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/ghcss.js"],
      "run_at": "document_idle"
    }
  ]
}
